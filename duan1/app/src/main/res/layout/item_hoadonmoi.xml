<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cardhoadonmoi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#0A21F6"
    android:elevation="12dp"
    app:cardCornerRadius="25dp"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">

        <TextView
            android:id="@+id/datehdmoi"
            android:layout_alignParentTop="true"
            android:textSize="15dp"
            android:text="21/08/2020"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dagiao"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:text="new"
            android:textColor="#1810F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/datehdmoi"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tvMSmoi"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="40dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:text="20"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TenKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/tvMSmoi"
            android:text="NGUYỄN VĂN A"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMSmoi"
            android:orientation="horizontal">
            <View
                android:layout_width="145dp"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="25dp"/>
            <Button
                android:id="@+id/xachanhoadonmoi"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="40dp"
                android:background="@drawable/button_radius"
                android:text="xác nhận"
                android:layout_marginLeft="1dp"
                />
            <View
                android:layout_width="145dp"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="25dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>